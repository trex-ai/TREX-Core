{
  "version": "3.7.0",
  "study": {
    "name": "SmallSweep_8Step",
      "description": "",
      "start_datetime": "2018-07-01 0:0:0",
      "start_datetime_sequence": "sequential",
      "timezone": "America/Vancouver",
      "days": 2,
      "generations": 500,
      "sim_root": "/home/trex/sim/"
    },
  "server": {
      "host": "",
      "port": 5205
    },
  "training": {
   "hyperparameters": {
      // "entropy_reg": {"start": 0.1, "stop": 0.01, "num": 3},
      "kl_stop": {"start": 0.1, "stop": 0.01, "num": 3},
      "actor_hidden": [[64,64], [128,128],[256, 256]],
     "warmup_actor": [true]
    },
    "curriculum": {
      "10": {
        "anneal": {
          "warmup_actor":  [false, "set"],
          "entropy_reg": [0.85,"multiply", 0.01]
          }
        }
      }
    },

    "market": {
      "id": "",
      "type": "MicroTE3B",
      "close_steps": 2,
      "grid": {
        "price": 0.069,
        "fee_ratio": 1.1
      }
    },
    "participants": {
      "GreedyBaseline": { //serves as baseline for evaluation for battery tests
        "type": "Residential",
        "trader": {
          "track_metrics": true,
          "type": "greedy_battery",
          "bid_price": 0.14,
          "ask_price": 0.07,
          "P_max": 25,
          "actions": [
            "storage"
          ],
          "learning": true,
          "limit_actions": true,
          "reward_function": "net_profit",
          "use_synthetic_profile": "8step_offsetsine_load_solar"

        },
        "load": {
          "scale": 15
        },
        "generation": {
          "scale": 15
        },
        "storage": {
          "type": "Bess",
          "capacity": 150,
          "power": 3500,
          "efficiency": 1,
          "monthly_sdr": 0
        }
      },
      "House1": {
        "type": "Residential",
        "trader": {

          "track_metrics": true,
          "type": "ppo_trader_multivar",
          "bid_price": 0.14,
          "ask_price": 0.07,
          "P_max": 25,
          "actions": ["storage"], // 'price', 'quantity'
          "learning": true,
          "observations": ["generation", "load", "soc"],

          "use_early_stop_critic": true,
          "warmup_actor": false,
          "alpha_critic": 5e-4,
          "critic_hidden": [64,64],
          "critic_patience": 60,
          "critic_type": "GRU",

          "use_early_stop_actor": true,
          "alpha_actor": 1.5e-4,
          "actor_type": "GRU",
          "actor_hidden": [64,64],
          "policy_clip": 0.2,
          "kl_stop": 0.05,
          "gamma": 0.99,
          "gae_lambda": 0.95,
          "normalize_advantages": true,
          "entropy_reg": 0.8, //Entropy starting value, will probably need to be adjusted depending on schedule. ATM recommended to anneal from close to 1 to 1e-3

          "g_grad_norm": 10,
          "batch_size": 64,
          "experience_replay_buffer_length": 720,
          "trajectory_length": 16, //trajectory_length >>= main seasonalityof data (1.5-2 days, likely)
          "burn_in": 8,             //BURN_IN >= main seasonalityof data (1day,likely)
          "max_train_steps": 300,

          "limit_actions": true,

          "reward_function": "net_profit",
         "use_synthetic_profile": "8step_offsetsine_load_solar"

        },
        "load": {
          "scale": 15
        },
        "generation": {
          "scale": 15
        },
        "storage": {
          "type": "Bess",
          "capacity": 150,
          "power": 3500,
          "efficiency": 1,
          "monthly_sdr": 0
        }
      }
    }
  }
  